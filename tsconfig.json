// See also: https://aka.ms/tsconfig.json
{
  "include": ["src/"],

  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "None",
    "outDir": "dist",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    /* Module Resolution Options */
    "types": ["p5/global"],

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  }
}
